{
    "layer": "top",
    "position": "top",
    "height": 36,
    "spacing": 4,
    "exclusive": true,
    "passthrough": false,
    "fixed-center": true,

    "modules-left": ["hyprland/workspaces", "custom/sep", "hyprland/window", "custon/sep", "wlr/taskbar"],
    "modules-center": [],
    "modules-right": [
	"hyprland/language",
	"cpu",
	"battery",
	"custom/traffic",
        "custom/sep",
        "pulseaudio",
        "clock",
        "custom/sep",
        "tray",
	"custom/notification",
        "custom/power"
    ],

    "hyprland/workspaces": {
        "format": "{name}",
        "on-click": "activate",
        "all-outputs": true,
        "disable-scroll": false,
        "active-only": false,
        "format-icons": {
            "default": "ÔÑë",
            "active": "ÔÜí",
            "urgent": "ÔÅ™"
        }
    },

    "hyprland/window": {
        "format": "{}",
        "rewrite": {
            "(.{42}).*": "$1.."
        },
        "icon": true,
        "icon-size": 22,
        "max-length": 60
    },

  "cpu": {
    "format": " Óâ¶  {usage}%",
    "format-alt": " Óâ¶  {avg_frequency}GHz",
    "interval": 5
  },

 "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "<span size='13000'>{icon} </span>{capacity}%",
    "format-warning": "<span size='13000'>{icon} </span>{capacity}%",
    "format-critical": "<span size='13000'>{icon} </span>{capacity}%",
    "format-charging": "Û∞ÇÑ {capacity}%",
    "format-plugged": "Û∞ÇÑ {capacity}%",
    "format-full": "Û∞ÇÑ {capacity}%",
    "format-icons": ["Û∞Å∫","Û∞Åº","Û∞Åæ","Û∞ÇÄ","Û∞ÇÇ"],
    "tooltip-format": "Time remaining: {time}\nPower draw: {power}W"
  },
  

 "custom/traffic": {
             "exec": "~/.config/waybar/scripts/network_traffic.sh",
             "return-type": "json",
             "format-ethernet": "{icon} {ifname} ‚á£{bandwidthDownBytes} ‚á°{bandwidthUpBytes}"    // optional
},


    "tray": {
        "show-passive-items": true,
        "spacing": 10
    },

 "clock": {
    "calendar": {
      "format": {
        "days": "<span color='#cad3f5'><b>{}</b></span>",
        "today": "<span color='#f5a97f'><b>{}</b></span>",
        "weekdays": "<span color='#ee99a0'><b>{}</b></span>"
      },
      "mode": "month"
    },
    "format": "ÔÄó  {:%I:%M %p}",
    "format-alt": "ÔÅ≥   {:%d %m %Y}",
    "tooltip-format": "<tt>{calendar}</tt>"
  },




      "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "Ôë¶  muted",
        "format-icons": {
            "headphone": "ÔÄ• ",
            "hands-free": "Û∞Çë",
            "headset": "Û∞Çë",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        },
        "on-click-middle": "pamixer -t",
        "on-click": "pavucontrol"
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "on-click": "pavucontrol -t 4",
        "on-click-middle": "~/.config/hypr/scripts/volume.sh --toggle-mic",
        "on-scroll-up": "~/.config/hypr/scripts/volume.sh --mic-inc",
        "on-scroll-down": "~/.config/hypr/scripts/volume.sh --mic-dec",
        "tooltip-format": "{source_desc} | {source_volume}%"
    },

    "custom/sep": {
        "format": "|",
        "tooltip": false
    },
 
 "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "icon-theme": "Papirus-Dark",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-right": "close",
        "on-click-middle": "fullscreen"
    },
   "hyprland/language": {
        "format-en": "üá∫üá∏ (US)",
        "format-ara": "üá™üá¨ (EG)",
        "keyboard-name": "at-translated-set-2-keyboard",
        "on-click": "hyprctl switchxkblayout at-translated-set-2-keyboard next"
    },


  "custom/notification": {
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "return-type": "json",
    "escape": true,
    "format": "<big>{icon}</big>",
    "format-icons": {
      "none": " ÔÇ¢ ",
      "notification": " ÔÉ≥ ",
      "dnd-none": " ÔÇ¢ ",
      "dnd-notification": " ÔÉ≥ "
    },
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw"
  },


    "custom/screen-recorder": {
        "format": "ÔÄΩ",
        "tooltip": false,
        "on-click": "notify-send 'Screen Recorder' 'Feature not implemented'",
        "on-click-right": "notify-send 'Screen Recorder' 'Right click: configure screen recorder'"
    },

    "custom/power": {
        "tooltip": false,
        "on-click": "wlogout",
        "format": "‚èª "
    }
}
