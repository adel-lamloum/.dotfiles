# Look and Feel
font-family="MesloLGS NF"
font-style = Regular
font-size = 12
font-thicken = true

adjust-underline-position = 40%
adjust-underline-thickness = -60%

cursor-style = block
cursor-style-blink = false

theme="Dracula"
background-opacity=0.9
bold-is-bright=true
title="Promptus Maximus"

# Shell Integrations
shell-integration = zsh
shell-integration-features = no-cursor,sudo

# Functional Keybinds
keybind = shift+ctrl+r=reload_config

# Splitting Panels Keybinds
keybind = shift+ctrl+ä=new_split:right
keybind = shift+ctrl+p=new_split:up
keybind = shift+ctrl+ö=new_split:down
keybind = shift+ctrl+l=new_split:left
keybind = shift+ctrl+c=close_surface

# Navigating Panels
keybind = ctrl+right=goto_split:right
keybind = ctrl+up=goto_split:top
keybind = ctrl+down=goto_split:bottom
keybind = ctrl+left=goto_split:left
